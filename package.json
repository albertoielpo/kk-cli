{
    "name": "@albertoielpo/kk-cli",
    "version": "1.0.5",
    "description": "Typescript commander CLI",
    "main": "main.js",
    "bin": {
        "kk": "dist/main.js"
    },
    "scripts": {
        "build": "tsc",
        "watch": "tsc -w",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest"
    },
    "keywords": [
        "kk-cli",
        "commander"
    ],
    "author": "Alberto Ielpo",
    "license": "ISC",
    "dependencies": {
        "chalk": "~4.1.2",
        "commander": "~11.0.0",
        "conf": "~11.0.2",
        "copy-paste": "~1.5.3",
        "find-process": "~1.4.7",
        "mongoose": "~7.4.3",
        "portscanner": "~2.2.0"
    },
    "devDependencies": {
        "@types/jest": "~29.5.2",
        "@types/node": "~18.16.1",
        "@types/portscanner": "~2.1.1",
        "jest": "~29.6.1",
        "prettier": "~3.0.2",
        "ts-jest": "~29.1.1",
        "typescript": "~5.1.6"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
